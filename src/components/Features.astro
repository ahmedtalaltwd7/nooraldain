---
import Container from "./Container.astro";

// Contract data for better maintainability
const contractData = [
  { partner: "IMC", description: "Food & Refreshment for trainings" },
  { partner: "IMC", description: "Tires & Battery supply" },
  { partner: "FMF", description: "Food, Refreshment & Hall rental with tools" },
  { partner: "FMF", description: "Generator fuel supply" },
  { partner: "FMF", description: "Cleaning tools supply" },
  { partner: "FMF", description: "Hall rental completion certification" },
  { partner: "IMC", description: "Seeds & Training tools" },
  { partner: "IMC", description: "Tent installation with chairs" },
  { partner: "FMF", description: "Hall rental service for trainings" },
  { partner: "FHI 360", description: "800 medical delivery kits" },
  { partner: "FHI 360", description: "2000 medical delivery kits" },
  {
    partner: "IOM",
    description: "Food & Refreshment for Lahj & Taiz trainings",
  },
];
---

<div id="features">
  <Container>
    <div class="mb-12 space-y-2 text-center">
      <h2 class="text-3xl font-bold text-gray-800 md:text-4xl dark:text-white">
        Our Features
      </h2>
      <p class="lg:mx-auto lg:w-6/12 text-gray-600 dark:text-gray-300">
        Implementation of various procurement and partnership projects with
        international organizations to support community development
        initiatives.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- IMC Partnership Projects -->
      <div
        class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
      >
        <div class="mt-6 relative">
          <h3 class="text-xl font-semibold text-gray-800 dark:text-white">
            IMC Partnerships
          </h3>
          <ul class="mt-4 space-y-2 text-sm text-gray-600 dark:text-gray-300">
            <li>• Food & Refreshment for trainings</li>
            <li>• Tires & Battery supply</li>
            <li>• Seeds & Training tools</li>
            <li>• Tent installation with chairs</li>
          </ul>
        </div>
      </div>

      <!-- FMF Partnership Projects -->
      <div
        class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
      >
        <div class="mt-6 relative">
          <h3 class="text-xl font-semibold text-gray-800 dark:text-white">
            FMF Partnerships
          </h3>
          <ul class="mt-4 space-y-2 text-sm text-gray-600 dark:text-gray-300">
            <li>• Food, Refreshment & Hall rental for trainings</li>
            <li>• Generator fuel supply</li>
            <li>• Cleaning tools supply</li>
            <li>• Hall rental completion certification</li>
          </ul>
        </div>
      </div>

      <!-- International Partnerships -->
      <div
        class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
      >
        <div class="mt-6 relative">  
          <h3 class="text-xl font-semibold text-gray-800 dark:text-white">
            Global Partnerships
          </h3>
          <ul class="mt-4 space-y-2 text-sm text-gray-600 dark:text-gray-300">
            <li>• FHI 360: 800 & 2000 medical delivery kits</li>
            <li>• IOM: Food & Refreshment in Lahj & Taiz</li>
          </ul>
        </div>
      </div>

      <!-- Additional Partnership Projects -->
      <div
        class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
      >
        <div class="mt-6 relative">
          <h3
            class="text-xl font-semibold text-gray-800 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors cursor-pointer"
          >
            Company Contracts
          </h3>
          <ul class="mt-4 space-y-2 text-sm text-gray-600 dark:text-gray-300">
            <li>• IMC: Food & Refreshment for trainings</li>
            <li>• IMC: Tires & Battery supply</li>
            <li>• FMF: Food, Refreshment & Hall rental with tools</li>
            <li>• FMF: Generator fuel supply</li>
            <li>• FMF: Cleaning tools supply</li>
            <li>• FMF: Hall rental completion certification</li>
            <li>• IMC: Seeds & Training tools</li>
            <li>• IMC: Tent installation with chairs</li>
            <li>• FMF: Hall rental service for trainings</li>
            <li>• FHI 360: 800 medical delivery kits</li>
            <li>• FHI 360: 2000 medical delivery kits</li>
            <li>• IOM: Food & Refreshment for Lahj & Taiz trainings</li>
          </ul>
        </div>
      </div>
    </div>
  </Container>
</div>
